                    <label>Couleur</label>
                    <select id="color" class="form-control">
                      <option value="White">White</option>
                      <option value="White Pearly">White Pearly</option>
                      <option value="Blue">Blue</option>
                      <option value="Black">Black</option>
                    </select>
                  </div>

                  <div class="form-group">
                    <label>Options</label>
                    <select id="options" class="form-control select2 select2-hidden-accessible" multiple="" data-placeholder="Select an option" style="width: 100%;" tabindex="-1" aria-hidden="true">
