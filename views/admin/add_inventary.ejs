<script>
    $('.select2').select2()
    //Submit data when enter key is pressed
    $('#add_button').on('click', function(e) {
      var prix = $('#prix').val();
      var delai = $('#delai').val();
      var modele = $( "#modele option:selected" ).text();
      var energie = $( "#energie option:selected" ).text();
      var bv = $( "#bv option:selected" ).text();
      var usage = $( "#usage option:selected" ).text();
      var color = $( "#color option:selected" ).text();
      var options = $( "#options option:selected" ).text();
      var inventary = true;
      $.ajax({
        method: "POST",
        url: "/admin/add_inventary",
        contentType: "application/json",
        data: JSON.stringify({
          prix: prix,
          delai: delai,
          modele: modele,
          energie: energie,
          bv: bv,
          usage: usage,
          color: color,
          options: options,
          inventary: inventary
        })
        }).done(function(data) {
          console.log(data);
          var res = '<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><strong>Congratulations!</strong>'+data;
          $("#result").html(res);
          $("#result").addClass("alert alert-success alert-dismissable");
          //window.location.replace("/admin/");
        });
      });
</script>
