<script>
    //Submit data when enter key is pressed
    $('#add_button').on('click', function(e) {
      var prix = $('#prix').val();
      var delai = $('#delai').val();
      var modele = $( "#modele option:selected" ).text();
      var energie = $( "#energie option:selected" ).text();
      var bv = $( "#bv option:selected" ).text();
      var usage = $( "#usage option:selected" ).text();
      var confort = $( "#confort option:selected" ).text();
      var esthetique = $( "#esthetique option:selected" ).text();
      var assistance = $( "#assistance option:selected" ).text();
      var multimedia = $( "#multimedia option:selected" ).text();
      $.ajax({
        method: "POST",
        url: "/admin/add",
        contentType: "application/json",
        data: JSON.stringify({
          prix: prix,
          delai: delai,
          modele: modele,
          energie: energie,
          bv: bv,
          usage: usage,
          confort: confort,
          esthetique: esthetique,
          assistance: assistance,
          multimedia: multimedia,
        })
        }).done(function(data) {
          console.log(data);
          var res = '<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a><strong>Félicitation!</strong>'+data;
          $("#result").html(res);
          $("#result").addClass("alert alert-success alert-dismissable");
          //window.location.replace("/admin/");
        });
      });
</script>
